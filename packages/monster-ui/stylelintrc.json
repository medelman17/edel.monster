{
	"extends": ["stylelint-config-recommended"],
	"processors": [],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": []
			}
		],
		"declaration-block-trailing-semicolon": null,
		"no-descending-specificity": [
			true,
			{
				"ignore": ["selectors-within-list"]
			}
		],
		"no-invalid-double-slash-comments": true,
		"block-no-empty": null
	}
}
